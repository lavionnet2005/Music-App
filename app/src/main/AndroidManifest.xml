<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlbumsActivity"
            android:label="@string/activity_albums"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".ArtistsActiivity"
            android:label="@string/activity_artists"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".PlaylistsActivity"
            android:label="@string/activity_playlists"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".AllSongsActivity"
            android:label="@string/all_songs_list">

        </activity>
        <activity android:name=".PlaySongs"
            android:label="@string/play_songs"
            android:launchMode="singleTask">

        </activity>
    </application>

</manifest>